---
import { getImage } from 'astro:assets'

import appDesignDesktop from '../../assets/home/desktop/image-app-design.jpg'
import graphicDesignDesktop from '../../assets/home/desktop/image-graphic-design.jpg'
// Desktop
import appDesignMobile from '../../assets/home/mobile/image-app-design.jpg'
import graphicDesignMobile from '../../assets/home/mobile/image-graphic-design.jpg'
// Mobile
import appDesignTablet from '../../assets/home/tablet/image-app-design.jpg'
import graphicDesignTablet from '../../assets/home/tablet/image-graphic-design.jpg'

// Table

// Mobile
const appDesignMobileOpt = await getImage({ src: appDesignMobile, format: 'avif', quality: 'low' })
const graphicDesignMobileOpt = await getImage({
  src: graphicDesignMobile,
  format: 'avif',
  quality: 'low',
})

// Tablet
const appDesignTabletOpt = await getImage({ src: appDesignTablet, format: 'avif', quality: 'low' })
const graphicDesignTabletOpt = await getImage({
  src: graphicDesignTablet,
  format: 'avif',
  quality: 'low',
})

// Desktop
const appDesignDesktopOpt = await getImage({
  src: appDesignDesktop,
  format: 'avif',
  quality: 'low',
})
const graphicDesignDesktopOpt = await getImage({
  src: graphicDesignDesktop,
  format: 'avif',
  quality: 'low',
})
---

<section class="pt-[120px]">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-x-[30px]">
    <a href="/app-design" class="grid-stack rounded-[15px] overflow-hidden">
      <picture>
        <source
          media="(max-width: 767px)"
          srcset={appDesignMobileOpt.src}
          width={appDesignMobileOpt.attributes.width}
          height={appDesignMobileOpt.attributes.height}
        />
        <source
          media="(min-width: 1100px)"
          srcset={appDesignDesktopOpt.src}
          width={appDesignDesktopOpt.attributes.width}
          height={appDesignDesktopOpt.attributes.height}
        />
        <source
          media="(min-width: 768px)"
          srcset={appDesignTabletOpt.src}
          width={appDesignTabletOpt.attributes.width}
          height={appDesignTabletOpt.attributes.height}
        />
        <img
          src={appDesignDesktopOpt.src}
          alt=""
          width={appDesignDesktopOpt.attributes.width}
          height={appDesignDesktopOpt.attributes.height}
          class="w-full"
        />
      </picture>
      <div class="bg-black/80 text-white flex justify-center items-center flex-col gap-3">
        <p
          class="text-[28px] leading-[36px] md:text-[40px] md:leading-[48px] md:tracking-[2px] tracking-[1.4px] font-medium uppercase"
        >
          App design
        </p>
        <p class="text-[15px] tracking-[5px] font-medium uppercase">View projects</p>
      </div>
    </a>
    <a href="/graphic-design" class="grid-stack rounded-[15px] overflow-hidden">
      <picture>
        <source
          media="(max-width: 767px)"
          srcset={graphicDesignMobileOpt.src}
          width={graphicDesignMobileOpt.attributes.width}
          height={graphicDesignMobileOpt.attributes.height}
        />
        <source
          media="(min-width: 1100px)"
          srcset={graphicDesignDesktopOpt.src}
          width={graphicDesignDesktopOpt.attributes.width}
          height={graphicDesignDesktopOpt.attributes.height}
        />
        <source
          media="(min-width: 768px)"
          srcset={graphicDesignTabletOpt.src}
          width={graphicDesignTabletOpt.attributes.width}
          height={graphicDesignTabletOpt.attributes.height}
        />
        <img
          src={graphicDesignDesktopOpt.src}
          alt=""
          width={graphicDesignDesktopOpt.attributes.width}
          height={graphicDesignDesktopOpt.attributes.height}
          class="w-full"
        />
      </picture>
      <div class="bg-black/80 text-white flex justify-center items-center flex-col gap-3">
        <p
          class="text-[28px] leading-[36px] md:text-[40px] md:leading-[48px] md:tracking-[2px] tracking-[1.4px] font-medium uppercase"
        >
          Graphic design
        </p>
        <p class="text-[15px] tracking-[5px] font-medium uppercase">View projects</p>
      </div>
    </a>
  </div>
</section>
